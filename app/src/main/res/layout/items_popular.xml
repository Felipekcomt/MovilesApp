<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvlist_names_movies_popular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:layout_marginLeft="55dp"
            />
        <TextView
            android:id="@+id/tvlist_overview_movies_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvlist_names_movies_popular"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="0dp"
            android:text="Overview" />
        <TextView
            android:id="@+id/tvlist_popularity_movies_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvlist_overview_movies_popular"
            android:layout_marginLeft="55dp"
            android:text="Popularity"
            />
        <ImageView
            android:id="@+id/imglist_movies_popular"
            android:layout_width="50dp"
            android:layout_height="57dp"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>