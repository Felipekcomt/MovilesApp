<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvlist_names_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:text="Titulo" />

        <TextView
            android:id="@+id/tvlist_overview_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvlist_names_movies"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="0dp"
            android:text="Overview" />

        <TextView
            android:id="@+id/tvlist_popularity_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvlist_overview_movies"
            android:layout_marginLeft="55dp"
            android:text="Popularity" />

        <ImageView
            android:id="@+id/imglist_movies"
            android:layout_width="50dp"
            android:layout_height="57dp" />

        <ImageButton
            android:id="@+id/btn_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvlist_overview_movies"
            android:layout_alignLeft="@+id/tvlist_overview_movies"
            android:layout_marginStart="294dp"
            android:layout_marginLeft="294dp"
            android:src="@android:drawable/btn_star" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>